<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Player" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/player_primary</item>
        <item name="colorPrimaryVariant">@color/player_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/player_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/player_primary_dark</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/player_background</item>
        <item name="colorSurface">@color/player_surface</item>
        <item name="colorOnSurface">@color/player_text_primary</item>
        <!-- Customize your theme here. -->
    </style>
    

</resources>